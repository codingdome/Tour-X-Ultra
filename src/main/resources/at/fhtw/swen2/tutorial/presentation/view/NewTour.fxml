<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>


<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.Spinner?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.fhtw.swen2.tutorial.presentation.view.NewTourView">
    <children>
        <Label layoutX="46.0" layoutY="44.0" text="Tourname"
               style="-fx-font-family: Arial; -fx-font-size: 12px; -fx-font-weight: bold;"/>
        <TextField fx:id="tf_name" layoutX="46.0" layoutY="65.0"/>

        <Label layoutX="46.0" layoutY="104.0" text="Description"
               style="-fx-font-family: Arial; -fx-font-size: 12px; -fx-font-weight: bold;"/>
        <TextField fx:id="tf_description" layoutX="46.0" layoutY="125.0"/>

        <Label layoutX="46.0" layoutY="164.0" text="Transport type"
               style="-fx-font-family: Arial; -fx-font-size: 12px; -fx-font-weight: bold;"/>

        <ChoiceBox fx:id="cb_type" layoutX="46.0" layoutY="185.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Skateboard"/>
                    <String fx:value="Mountain bike"/>
                    <String fx:value="Road bike"/>
                    <String fx:value="Running"/>
                    <String fx:value="Hiking"/>
                    <String fx:value="Roller skates"/>
                    <String fx:value="Scooter"/>
                    <String fx:value="Motorcycle"/>
                    <String fx:value="Car"/>
                </FXCollections>
            </items>
        </ChoiceBox>

        <Label layoutX="46.0" layoutY="224.0" text="Information"
               style="-fx-font-family: Arial; -fx-font-size: 12px; -fx-font-weight: bold;"/>
        <TextField fx:id="tf_information" layoutX="46.0" layoutY="245.0"/>

        <Label layoutX="334.0" layoutY="44.0" text="Start"
               style="-fx-font-family: Arial; -fx-font-size: 12px; -fx-font-weight: bold;"/>
        <TextField fx:id="tf_from" layoutX="334.0" layoutY="65.0"/>
        <Label layoutX="334.0" layoutY="104.0" text="Destination"
               style="-fx-font-family: Arial; -fx-font-size: 12px; -fx-font-weight: bold;"/>
        <TextField fx:id="tf_to" layoutX="334.0" layoutY="125.0"/>
        <Label layoutX="334.0" layoutY="164.0" text="Distance (in m)"
               style="-fx-font-family: Arial; -fx-font-size: 12px; -fx-font-weight: bold;"/>
        <TextField fx:id="tf_distance" layoutX="334.0" layoutY="185.0"/>
        <Label layoutX="334.0" layoutY="224.0" text="Duration (in min)"
               style="-fx-font-family: Arial; -fx-font-size: 12px; -fx-font-weight: bold;"/>
        <TextField fx:id="tf_time" layoutX="334.0" layoutY="245.0"/>

        <Button layoutY="300.0" layoutX="334.0" fx:id="submitRouteButton" onAction="#submitRouteButtonAction"
                style="-fx-background-color: #32aae2; -fx-font-family: Arial; -fx-font-size: 16px; -fx-font-weight: bold;"
                text="Add tour" textFill="WHITE"/>

        <Label fx:id="l_feedback" layoutX="46" layoutY="350"
               style="-fx-font-weight: bold; -fx-text-fill: red;" maxWidth="500" wrapText="true"/>


    </children>
</AnchorPane>