<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="at.fhtw.swen2.tourxultra.presentation.view.TourViews.TourSearchView"
            prefHeight="400.0" prefWidth="600.0">
    <children>

        <HBox id="HBox" alignment="CENTER" spacing="5.0" AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label text="Search Tours:"/>
                <TextField fx:id="tf_search" HBox.hgrow="ALWAYS" promptText="Filter by: name, transport type, departure, arrival, distance or duration."
                           style="fx-padding: 10px 20px; -fx-text-fill: black; -fx-font-size: 14px; -fx-background-color: transparent; -fx-border-color: black; -fx-border-width: 2px"/>
                <Button style="-fx-background-color: #390099" fx:id="b_search" text="Search" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>

    </children>
</AnchorPane>